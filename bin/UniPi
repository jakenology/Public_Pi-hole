#!/bin/bash
## Universal Pi-hole Settings Script
## This script will update all settings to be universal with all Pi-hole's 
## Define Global Variables
unipiDir="/etc/UniPi"
repo="https://github.com/jaykepeters/UniPi.git"

## Define Functions
## Pre-Check (Are we ready to go?)
message() {
    echo "$1"
}

preCheck() {
    # Notify User
    message "Running Checks..."
    # Check for UniPi Directory as defined above
    if [ ! -d $unipiDir ]; then
        mkdir $unipiDir
    fi
}

## Get Configuration from GitHub Repo
getConfig() {
    message "Getting Configuration"
    # Change Directory into UniPi
    cd $unipiDir

    # Clone Repo
    git clone $repo

    # Rename to Downlaods
    mv ./UniPi ./Downloads

    # Change Directory into Downloads
    cd ./Downloads
}

## Update binaries
updateBin() {
    message "Updating Binaries"
    for filename in bin/*
    do
        mv $filename /usr/local/bin/
    done;

    giveExecutePerms() {
        for file in /usr/local/bin/*
        do
            chmod a+x $file
        done;
    }

    giveExecutePerms
}

## Update DNS Settings
updateDNS() {
    for filename in dns/*
    do
        mv $filename /etc/dnsmasq.d/
    done;
}

## Add Cron Jobs
updateCron() {
    echo "Nothing here..."
}

## Finish Up
finishUp() {
    cd ..
    rm -rf ./Downloads
}

## MAIN LOOP 
main() {
    # Pre-Check
    preCheck

    # Get Configuration
    getConfig

    # Update Binaries
    updateBin

    # Update DNS Settings
    updateDNS

    # Add Cron Jobs
    updateCron

    # Finish Up
    finishUp
}

## Start Me!
main
